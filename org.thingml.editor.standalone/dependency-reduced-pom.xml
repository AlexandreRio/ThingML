<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>org.thingml.root</artifactId>
    <groupId>org.thingml</groupId>
    <version>0.6.0-SNAPSHOT</version>
    <relativePath>../org.thingml.root/pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.thingml</groupId>
  <artifactId>org.thingml.editor.standalone</artifactId>
  <name>ThingML :: Editor :: Standalone</name>
  <build>
    <plugins>
      <plugin>
        <groupId>org.scala-tools</groupId>
        <artifactId>maven-scala-plugin</artifactId>
        <executions>
          <execution>
            <id>scala-compile-first</id>
            <phase>process-resources</phase>
            <goals>
              <goal>add-source</goal>
              <goal>compile</goal>
            </goals>
          </execution>
          <execution>
            <id>scala-test-compile</id>
            <phase>process-test-resources</phase>
            <goals>
              <goal>testCompile</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <jvmArgs>
            <jvmArg>-Xmx1024m</jvmArg>
          </jvmArgs>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>org.sintef.thingml.ThingMLApp</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>com.pyx4me</groupId>
        <artifactId>proguard-maven-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>proguard</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <injar>${project.build.finalName}.jar</injar>
          <outjar>${project.build.finalName}-small.jar</outjar>
          <obfuscate>false</obfuscate>
          <maxMemory>1024m</maxMemory>
          <proguardVersion>4.5</proguardVersion>
          <options>
            <option>-dontskipnonpubliclibraryclasses</option>
            <option>-dontskipnonpubliclibraryclassmembers</option>
            <option>-dontoptimize</option>
            <option>-ignorewarnings</option>
            <option>-keep public class org.sintef.thingml.ThingMLApp { *; }</option>
            <option>-keep class * extends javax.swing.plaf.ComponentUI {
                            public static javax.swing.plaf.ComponentUI createUI(javax.swing.JComponent);
                            }</option>
            <option>-keep class jsyntaxpane.** { *; }</option>
            <option>-keepattributes *Annotation*</option>
            <option>-keepattributes **</option>
          </options>
          <assembly>
            <inclusions>
              <inclusion>
                <groupId>org.thingml</groupId>
                <artifactId>org.thingml.parser.standalone</artifactId>
              </inclusion>
              <inclusion>
                <groupId>org.emftext</groupId>
                <artifactId>org.emftext.commons.antlr</artifactId>
              </inclusion>
              <inclusion>
                <groupId>org.thingml</groupId>
                <artifactId>org.thingml.model</artifactId>
              </inclusion>
              <inclusion>
                <groupId>org.thingml</groupId>
                <artifactId>org.thingml.compilers</artifactId>
              </inclusion>
              <inclusion>
                <groupId>org.kevoree.extra</groupId>
                <artifactId>org.kevoree.extra.emf.library</artifactId>
              </inclusion>
              <inclusion>
                <groupId>org.kevoree.extra</groupId>
                <artifactId>org.kevoree.extra.jsyntaxpane</artifactId>
                <filter>!META-INF/services/jsyntaxpane/kitsfortypes.properties</filter>
              </inclusion>
              <inclusion>
                <groupId>org.scala-lang</groupId>
                <artifactId>scala-library</artifactId>
              </inclusion>
              <inclusion>
                <groupId>com.apple</groupId>
                <artifactId>AppleJavaExtensions</artifactId>
              </inclusion>
            </inclusions>
          </assembly>
          <libs>
            <lib>${java.lib.location}</lib>
          </libs>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>java.net-m2</id>
      <name>java.net - Maven 2</name>
      <url>https://repository.jboss.org/nexus/content/repositories/java.net-m2</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>evgeny-goldin.org</id>
      <url>http://evgeny-goldin.org/artifactory/repo/</url>
    </pluginRepository>
  </pluginRepositories>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>

