import "../timestamp.thingml"


thing TimestampJava includes Timestamp
@pim "Timestamp"
@platform "java"
{

    statechart behavior init ready {
        state ready {
            internal event timer?getTimestamp
            action timer!timestamp('System.currentTimeMillis()')    
        }    
    }

}

