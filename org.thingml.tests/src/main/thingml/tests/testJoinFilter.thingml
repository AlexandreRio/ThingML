import "thingml.thingml"

thing fragment TestMsgs {
    message m1();
    message m2();

    message res();
}

thing TestJoinFilter includes Test, TestMsgs
@test " # f"
@conf "connector test.recv => test.send"
{
    provided port send {
        sends m1, m2, res
    }

    required port recv {
        receives m1, m2, res
    }

    stream filteredJoin1 do
        from m : [ e1 : [recv?m1]::keep(false) & e2 : [recv?m2]::keep(true) -> res()]
        action send!res()
    end
    
    stream filteredJoin2 do
        from m : [ recv?m1 & e2 : [recv?m2]::keep(true) -> res()]::keep(true)
        action send!res()
    end

    stream filteredJoin3 do
        from m : [ recv?m1 & e2 : [recv?m2]::keep(true) -> res()]::keep(false)
        action send!res()
    end



    statechart testSimpleFilter init Init {
        state Init {
            on entry do
                send!m1()
                send!m2()
            end

            internal
            event recv?res
            action harnessOut!testOut('\'f\'')
        }
    }


}
