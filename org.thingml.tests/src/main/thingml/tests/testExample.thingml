import "../../../../../org.thingml.samples/src/main/thingml/thingml.thingml"

thing TestInit includes Test 
@test " # E"
{
	statechart TestInit init radio {
		property station : Integer
		property track : Integer
		
		state radio {
			on entry output!send("0")
			
			transition -> cd
			event input?mode
			
			transition -> radio
			event input?next
			action station = station + 1
		}
		state cd {
			on entry output!send("1")
			
			transition -> radio
			event input?mode
			
			transition -> cd
			event input?next
			action track = track + 1
		}
	}
}