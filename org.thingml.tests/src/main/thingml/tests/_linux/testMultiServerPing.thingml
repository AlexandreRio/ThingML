import "../../../../../../org.thingml.samples/src/main/thingml/core/_linux/test.thingml"
import "../testMultiServerPing.thingml"
import "../tester.thingml"
import "../../../../../../org.thingml.samples/src/main/thingml/core/_linux/timer.thingml"

configuration TestMultiServerPingC 
@output_folder "/home/thingml_out/" {
	group timer : TimerLinux
		set timer.timer.millisecond = true
		set timer.timer.period = 100
		set timer.clock.period = 100

	instance harness : Tester
	instance dump : TestDumpLinux
	instance test : TestMultiServerPing
	connector test.harness => dump.dump
	connector test.harness => harness.test
	connector harness.testEnd => dump.dump
	connector harness.timer => timer.timer.timer
	instance pingServ1 : PingServer
		set pingServ1.num = 1
	instance pingServ2 : PingServer
		set pingServ2.num = 2
	instance pingServ3 : PingServer
		set pingServ3.num = 3
	connector test.ppclient => pingServ1.pp
	connector test.ppclient => pingServ2.pp
	connector test.ppclient => pingServ3.pp
}