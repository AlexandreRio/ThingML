import "../../../../../org.thingml.samples/src/main/thingml/thingml.thingml"

thing TestRegion includes Test 
@test "t # (AI|IA)(BF|FB)"
@test "ttt # (AI|IA)(BF|FB)(AI|IA)(BF|FB)"
@test "tatzzat # (AI|IA)(BF|FB)I(AF|FA)BAI(BF|FB)"


{
	statechart TestRegion init I {
	                                  
		state I {
			on entry harness!testOut('\'I\'')
			transition -> F
			event m : harness?testIn
			guard m.c == '\'t\''
			transition -> F
			event m : harness?testIn
			guard m.c == '\'a\''
		}
		
		state F {
			on entry harness!testOut('\'F\'')
			transition -> I
			event m : harness?testIn
			guard m.c == '\'t\''
			transition -> I
			event m : harness?testIn
			guard m.c == '\'a\''
		}
		
		region R init A {
		
			state A {
				on entry harness!testOut('\'A\'')
				//on exit harness!testOut('\'X\'')
				transition -> B
				event m : harness?testIn
				guard m.c == '\'t\''
				transition -> B
				event m : harness?testIn
				guard m.c == '\'z\''
			}
		
			state B {
				on entry harness!testOut('\'B\'')
				//on exit harness!testOut('\'1\'')
				transition -> A
				event m : harness?testIn
				guard m.c == '\'t\''
				transition -> A
				event m : harness?testIn
				guard m.c == '\'z\''
			}
		}			
	}
}