thing fragment SchedulerMsgs {
	message setup();
	message loop();
}

thing fragment Scheduler includes SchedulerMsgs
{	
	// Events generated by the buttons
	provided port Scheduler {
		sends setup, loop
	}
	
	statechart SimpleScheduler init Start {
	
		state Start {
			transition -> Running
			action Scheduler!setup()
		}
		
		state Running {
			transition -> Running
			action Scheduler!loop()
		}
	}
}