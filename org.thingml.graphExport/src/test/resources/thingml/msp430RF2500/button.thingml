import "PrimitiveTypes.thingml"

// Definition of a driver to manage up to 8 buttons
// Ids of the 8 buttons is [1..8]

thing fragment ButtonMessages {
	message press(button_id : Integer);
	message release(button_id : Integer);
}

thing Button includes ButtonMessages
{	

	
	
	// Events generated by the buttons
	provided port Button {
		sends press
		sends release
	}
}